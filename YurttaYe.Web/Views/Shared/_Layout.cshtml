<!DOCTYPE html>
<html lang="tr" x-data="{ darkMode: localStorage.getItem('darkMode') === 'true', navOpen: false }" x-bind:class="{ 'dark': darkMode }">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KYK Yurt Yemek Menüsü | YurttaYe</title>
    <meta name="description" content="YurttaYe ile KYK yurtlarında sunulan günlük yemek menülerini kolayca sorgulayın. Mobil uygulama ile her zaman menülere erişin." />
    <meta name="keywords" content="KYK yurt yemek menüsü, YurttaYe, menü sorgulama, yurt yemekleri, Türkiye yurt menüleri" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Furkan Bulut" />
    <link rel="canonical" href="https://www.yurttaye.com" />
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="@ViewData['Title'] - KYK Yurt Yemek Menüsü | YurttaYe" />
    <meta property="og:description" content="YurttaYe ile KYK yurtlarında sunulan günlük yemek menülerini kolayca sorgulayın. Mobil uygulama ile her zaman menülere erişin." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.yurttaye.com" />
    <meta property="og:image" content="https://www.yurttaye.com/images/og-image.jpg" />
    <meta property="og:site_name" content="YurttaYe" />
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@ViewData['Title'] - KYK Yurt Yemek Menüsü | YurttaYe" />
    <meta name="twitter:description" content="YurttaYe ile KYK yurtlarında sunulan günlük yemek menülerini kolayca sorgulayın." />
    <meta name="twitter:image" content="https://www.yurttaye.com/images/og-image.jpg" />
    <!-- Tailwind CSS (consider hosting locally for performance) -->
    <script src="https://cdn.tailwindcss.com" defer></script>
    <!-- Alpine.js for interactivity -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.1/dist/cdn.min.js" defer></script>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Structured Data (Schema.org) -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "YurttaYe",
        "url": "https://www.yurttaye.com",
        "description": "KYK yurtlarında sunulan yemek menülerini sorgulayın ve mobil uygulamamızla menülere kolayca erişin.",
        "publisher": {
            "@type": "Organization",
            "name": "YurttaYe",
            "logo": {
                "@type": "ImageObject",
                "url": "https://www.yurttaye.com/images/logo.png"
            }
        },
        "potentialAction": {
            "@type": "SearchAction",
            "target": "https://www.yurttaye.com/search?q={search_term_string}",
            "query-input": "required name=search_term_string"
        }
    }
    </script>
    <style>
        /* Custom Theme Variables (unchanged for brevity) */
        :root {
            --bg-primary: #fafaf9;
            --bg-secondary: #f5f5f4;
            --bg-card: #ffffff;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --accent: #059669;
            --accent-hover: #047857;
            --border: #e5e7eb;
            --border-card: #e5e7eb;
            --button-primary: #2563eb;
            --button-primary-hover: #1d4ed8;
            --error-bg: #fef2f2;
            --error-text: #991b1b;
            --error-border: #dc2626;
        }
        .dark {
            --bg-primary: #1f2937;
            --bg-secondary: #374151;
            --bg-card: #2d3748;
            --text-primary: #e5e7eb;
            --text-secondary: #9ca3af;
            --accent: #10b981;
            --accent-hover: #059669;
            --border: #4b5563;
            --border-card: #4b5563;
            --button-primary: #3b82f6;
            --button-primary-hover: #2563eb;
            --error-bg: #7f1d1d;
            --error-text: #f87171;
            --error-border: #f87171;
        }
        body {
            background-color: var(--bg-primary);
            color: var(--text-primary);
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        /* Other styles unchanged for brevity */
    </style>
</head>
<body class="font-sans antialiased">
<!-- Navbar -->
<header role="banner">
    <nav class="bg-secondary shadow-lg sticky top-0 z-50" aria-label="Ana Menü">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <!-- Logo -->
                <a class="text-2xl font-bold text-primary hover:text-accent transition-colors" href="/" aria-label="YurttaYe Anasayfası">YurttaYe</a>
                <!-- Mobile Menu Toggle -->
                <div class="flex items-center space-x-4 lg:hidden">
                    <button x-on:click="darkMode = !darkMode; localStorage.setItem('darkMode', darkMode)" class="text-secondary hover:text-accent focus:outline-none" aria-label="Koyu modu aç/kapat">
                        <i x-show="!darkMode" class="fas fa-sun w-6 h-6" aria-hidden="true"></i>
                        <i x-show="darkMode" class="fas fa-moon w-6 h-6" aria-hidden="true"></i>
                    </button>
                    <button x-on:click="navOpen = !navOpen" class="text-secondary hover:text-accent focus:outline-none" aria-label="Mobil menüyü aç/kapat">
                        <i class="fas fa-bars w-6 h-6" aria-hidden="true"></i>
                    </button>
                </div>
                <!-- Desktop Menu -->
                <div class="hidden lg:flex lg:items-center lg:space-x-6" role="navigation">
                    <ul class="flex space-x-6">
                        <li>
                            <a class="text-secondary hover:text-accent transition-colors" href="/" asp-controller="Home" asp-action="Index">Menü Sorgula</a>
                        </li>
                        <li>
                            <a href="https://play.google.com/store/apps/details?id=com.yurttaye.yurttaye" target="_blank" rel="noopener noreferrer" class="text-secondary hover:text-accent transition-colors">Google Play'den İndir</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                        <li>
                            <a class="text-secondary hover:text-accent transition-colors" href="/Admin/AdminMenu" asp-area="Admin" asp-controller="AdminMenu" asp-action="Index">Menü Yönetimi</a>
                        </li>
                        <li>
                            <a class="text-secondary hover:text-accent transition-colors" href="/Admin/AdminCity" asp-area="Admin" asp-controller="AdminCity" asp-action="Index">Şehir Yönetimi</a>
                        </li>
                        }
                    </ul>
                    <ul class="flex space-x-6 ml-6">
                        @if (User.Identity.IsAuthenticated)
                        {
                        <li>
                            <a class="text-secondary hover:text-accent transition-colors" href="/Account/Logout" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                        </li>
                        }
                        else
                        {
                        <li>
                            <a class="text-secondary hover:text-accent transition-colors" href="/Account/Login" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                        </li>
                        }
                    </ul>
                    <button x-on:click="darkMode = !darkMode; localStorage.setItem('darkMode', darkMode)" class="text-secondary hover:text-accent focus:outline-none" aria-label="Koyu modu aç/kapat">
                        <i x-show="!darkMode" class="fas fa-sun w-6 h-6" aria-hidden="true"></i>
                        <i x-show="darkMode" class="fas fa-moon w-6 h-6" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
            <!-- Mobile Menu -->
            <div x-show="navOpen" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 -translate-y-4" x-transition:enter-end="opacity-100 translate-y-0" x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100 translate-y-0" x-transition:leave-end="opacity-0 -translate-y-4" class="lg:hidden">
                <ul class="flex flex-col space-y-4 py-4">
                    <li>
                        <a class="text-secondary hover:text-accent transition-colors" href="/" asp-controller="Home" asp-action="Index">Menü Sorgula</a>
                    </li>
                    <li>
                        <a href="https://play.google.com/store/apps/details?id=com.yurttaye.yurttaye" target="_blank" rel="noopener noreferrer" class="text-secondary hover:text-accent transition-colors">Google Play'den İndir</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                    <li>
                        <a class="text-secondary hover:text-accent transition-colors" href="/Admin/AdminMenu" asp-area="Admin" asp-controller="AdminMenu" asp-action="Index">Menü Yönetimi</a>
                    </li>
                    <li>
                        <a class="text-secondary hover:text-accent transition-colors" href="/Admin/AdminCity" asp-area="Admin" asp-controller="AdminCity" asp-action="Index">Şehir Yönetimi</a>
                    </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li>
                        <a class="text-secondary hover:text-accent transition-colors" href="/Account/Logout" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                    </li>
                    }
                    else
                    {
                    <li>
                        <a class="text-secondary hover:text-accent transition-colors" href="/Account/Login" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Main Content -->
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <main role="main">
        @RenderBody()
    </main>
</div>

<!-- Footer -->
<footer class="bg-secondary shadow-lg text-primary" role="contentinfo">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- About -->
            <div>
                <h3 class="text-lg font-semibold text-primary mb-4">YurttaYe Hakkında</h3>
                <p class="text-secondary text-sm">
                    YurttaYe, Türkiye’deki KYK yurtlarında sunulan günlük yemek menülerini kolayca keşfetmenizi sağlar. Mobil uygulamamızla her zaman, her yerde menülere erişebilirsiniz.
                </p>
            </div>
            <!-- Links -->
            <div>
                <h3 class="text-lg font-semibold text-primary mb-4">Hızlı Bağlantılar</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="/" class="text-secondary hover:text-accent transition-colors">Menü Sorgula</a></li>
                    <li><a href="https://play.google.com/store/apps/details?id=com.yurttaye.yurttaye" target="_blank" rel="noopener noreferrer" class="text-secondary hover:text-accent transition-colors">Google Play</a></li>
                    <li><a href="https://play.google.com/apps/testing/com.yurttaye.yurttaye" target="_blank" rel="noopener noreferrer" class="text-secondary hover:text-accent transition-colors">Test Sürümü</a></li>
                    <li><a href="/sitemap.xml" class="text-secondary hover:text-accent transition-colors">Site Haritası</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li><a href="/Account/Logout" asp-controller="Account" asp-action="Logout" class="text-secondary hover:text-accent transition-colors">Çıkış Yap</a></li>
                    }
                    else
                    {
                    <li><a href="/Account/Login" asp-controller="Account" asp-action="Login" class="text-secondary hover:text-accent transition-colors">Giriş Yap</a></li>
                    }
                </ul>
            </div>
            <!-- Social Media -->
            <div>
                <h3 class="text-lg font-semibold text-primary mb-4">Bizi Takip Edin</h3>
                <div class="flex space-x-4">
                    <a href="https://www.furkanbulut.software/" target="_blank" rel="noopener noreferrer" class="text-secondary hover:text-accent transition-colors" aria-label="Furkan Bulut Web Sitesi">
                        <i class="fas fa-globe w-6 h-6" aria-hidden="true"></i>
                    </a>
                    <a href="https://twitter.com/yurttaye" target="_blank" rel="noopener noreferrer" class="text-secondary hover:text-accent transition-colors" aria-label="YurttaYe Twitter">
                        <i class="fab fa-twitter w-6 h-6" aria-hidden="true"></i>
                    </a>
                    <a href="https://instagram.com/yurttaye" target="_blank" rel="noopener noreferrer" class="text-secondary hover:text-accent transition-colors" aria-label="YurttaYe Instagram">
                        <i class="fab fa-instagram w-6 h-6" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="border-t border-accent mt-8 pt-4 text-center">
            <p class="text-secondary text-sm">© 2025 YurttaYe. Tüm hakları saklıdır.</p>
            <p class="text-secondary text-sm mt-2">Geliştirici: <a href="https://www.furkanbulut.software/" target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">Furkan Bulut</a></p>
        </div>
    </div>
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/jquery.min.js" defer></script>
<script src="~/js/site.js" asp-append-version="true" defer></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>