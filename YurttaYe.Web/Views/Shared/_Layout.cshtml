<!DOCTYPE html>
<html lang="tr" x-data="{ darkMode: localStorage.getItem('darkMode') === 'true', navOpen: false }" x-bind:class="{ 'dark': darkMode }">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YurttaYe</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Alpine.js for interactivity -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.1/dist/cdn.min.js" defer></script>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Light theme */
        .bg-primary { background-color: #F9FAFB; }
        .text-primary { color: #1F2937; }
        .bg-accent { background-color: #2DD4BF; }
        .text-accent { color: #2DD4BF; }
        .bg-secondary { background-color: #E5E7EB; }
        .bg-card { background-color: #FFFFFF; }
        .border-card { border-color: #E5E7EB; }
        /* Dark theme */
        .dark .bg-primary { background-color: #1F2937; }
        .dark .text-primary { color: #FFFFFF; }
        .dark .bg-accent { background-color: #2DD4BF; }
        .dark .text-accent { color: #2DD4BF; }
        .dark .bg-secondary { background-color: #4B5563; }
        .dark .bg-card { background-color: #374151; }
        .dark .border-card { border-color: #4B5563; }
        /* Smooth transitions */
        .nav-transition { transition: all 0.3s ease-in-out; }
    </style>
</head>
<body class="bg-primary font-sans text-primary">
<!-- Navbar -->
<header>
    <nav class="bg-primary shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <!-- Logo and Brand -->
                <a class="flex items-center space-x-2" href="/">
                    <i class="fas fa-utensils w-8 h-8 text-accent"></i>
                    <span class="text-xl font-bold">YurttaYe</span>
                </a>
                <!-- Mobile Menu Toggle -->
                <div class="flex items-center space-x-4 lg:hidden">
                    <button x-on:click="darkMode = !darkMode; localStorage.setItem('darkMode', darkMode)" class="text-primary focus:outline-none" aria-label="Tema değiştir">
                        <i x-show="!darkMode" class="fas fa-sun w-6 h-6"></i>
                        <i x-show="darkMode" class="fas fa-moon w-6 h-6"></i>
                    </button>
                    <button x-on:click="navOpen = !navOpen" class="text-primary focus:outline-none" aria-label="Menüyü aç/kapat" :aria-expanded="navOpen">
                        <i class="fas fa-bars w-6 h-6"></i>
                    </button>
                </div>
                <!-- Desktop Menu -->
                <div class="hidden lg:flex lg:items-center lg:space-x-6">
                    <ul class="flex space-x-6">
                        <li>
                            <a class="text-primary hover:text-accent transition-colors" asp-controller="Home" asp-action="Index">Menü Sorgula</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                        <li>
                            <a class="text-primary hover:text-accent transition-colors" asp-area="Admin" asp-controller="AdminMenu" asp-action="Index">Menü Yönetimi</a>
                        </li>
                        <li>
                            <a class="text-primary hover:text-accent transition-colors" asp-area="Admin" asp-controller="AdminCity" asp-action="Index">Şehir Yönetimi</a>
                        </li>
                        }
                    </ul>
                    <ul class="flex space-x-4 ml-6">
                        @if (User.Identity.IsAuthenticated)
                        {
                        <li>
                            <a class="text-primary hover:text-accent transition-colors" asp-controller="Account" asp-action="Logout">Çıkış</a>
                        </li>
                        }
                        else
                        {
                        <li>
                            <a class="text-primary hover:text-accent transition-colors" asp-controller="Account" asp-action="Login">Giriş</a>
                        </li>
                        }
                    </ul>
                    <button x-on:click="darkMode = !darkMode; localStorage.setItem('darkMode', darkMode)" class="text-primary focus:outline-none" aria-label="Tema değiştir">
                        <i x-show="!darkMode" class="fas fa-sun w-6 h-6"></i>
                        <i x-show="darkMode" class="fas fa-moon w-6 h-6"></i>
                    </button>
                </div>
            </div>
            <!-- Mobile Menu -->
            <div x-show="navOpen" class="lg:hidden nav-transition" x-transition:enter="transform ease-out duration-300" x-transition:enter-start="opacity-0 -translate-y-4" x-transition:enter-end="opacity-100 translate-y-0" x-transition:leave="transform ease-in duration-200" x-transition:leave-start="opacity-100 translate-y-0" x-transition:leave-end="opacity-0 -translate-y-4">
                <ul class="flex flex-col space-y-4 py-4">
                    <li>
                        <a class="text-primary hover:text-accent transition-colors" asp-controller="Home" asp-action="Index">Menü Sorgula</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                    <li>
                        <a class="text-primary hover:text-accent transition-colors" asp-area="Admin" asp-controller="AdminMenu" asp-action="Index">Menü Yönetimi</a>
                    </li>
                    <li>
                        <a class="text-primary hover:text-accent transition-colors" asp-area="Admin" asp-controller="AdminCity" asp-action="Index">Şehir Yönetimi</a>
                    </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li>
                        <a class="text-primary hover:text-accent transition-colors" asp-controller="Account" asp-action="Logout">Çıkış</a>
                    </li>
                    }
                    else
                    {
                    <li>
                        <a class="text-primary hover:text-accent transition-colors" asp-controller="Account" asp-action="Login">Giriş</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Main Content -->
<div class="min-h-screen bg-primary">
    @RenderBody()
</div>

<!-- Footer -->
<footer class="bg-primary shadow-md mt-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Brand and Description -->
            <div>
                <div class="flex items-center space-x-2 mb-4">
                    <i class="fas fa-utensils w-6 h-6 text-accent"></i>
                    <span class="text-lg font-bold">YurttaYe</span>
                </div>
                <p class="text-primary text-sm">
                    Yurt yemek menülerini kolayca keşfedin. Şehir ve tarih seçerek güncel yemek listelerine ulaşın.
                </p>
            </div>
            <!-- Navigation Links -->
            <div>
                <h3 class="text-sm font-semibold text-primary mb-4">Hızlı Bağlantılar</h3>
                <ul class="space-y-2">
                    <li>
                        <a href="/" class="text-primary hover:text-accent transition-colors">Menü Sorgula</a>
                    </li>
                    <li>
                        <a href="/hakkimizda" class="text-primary hover:text-accent transition-colors">Hakkımızda</a>
                    </li>
                    <li>
                        <a href="/iletisim" class="text-primary hover:text-accent transition-colors">İletişim</a>
                    </li>
                    <li>
                        <a href="/gizlilik" class="text-primary hover:text-accent transition-colors">Gizlilik Politikası</a>
                    </li>
                </ul>
            </div>
            <!-- Social Media and Contact -->
            <div>
                <h3 class="text-sm font-semibold text-primary mb-4">Bize Ulaşın</h3>
                <ul class="space-y-2">
                    <li>
                        <a href="mailto:destek@yurttaye.com" class="text-primary hover:text-accent transition-colors">destek@yurttaye.com</a>
                    </li>
                    <li>
                        <a href="https://twitter.com/yurttaye" target="_blank" class="text-primary hover:text-accent transition-colors">Twitter</a>
                    </li>
                    <li>
                        <a href="https://instagram.com/yurttaye" target="_blank" class="text-primary hover:text-accent transition-colors">Instagram</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-300 dark:border-gray-600 text-center">
            <p class="text-primary text-sm">
                © 2025 YurttaYe. Tüm hakları saklıdır.
                <span class="block mt-2">
                        Geliştirici: <a href="https://www.furkanbulut.software/" target="_blank" class="text-accent hover:underline">Furkan Bulut</a>
                    </span>
            </p>
        </div>
    </div>
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>