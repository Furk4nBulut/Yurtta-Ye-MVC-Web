<!-- Loading Components -->

<!-- Skeleton Card for Menu Loading -->
<div class="skeleton-menu-card bg-card rounded-lg p-6 border border-border animate-pulse">
    <div class="flex items-center mb-4">
        <div class="w-8 h-8 bg-gray-300 rounded-full mr-3"></div>
        <div class="h-6 bg-gray-300 rounded w-32"></div>
    </div>
    <div class="space-y-3">
        <div class="h-4 bg-gray-300 rounded w-full"></div>
        <div class="h-4 bg-gray-300 rounded w-3/4"></div>
        <div class="h-4 bg-gray-300 rounded w-1/2"></div>
    </div>
    <div class="mt-4 flex space-x-2">
        <div class="h-8 bg-gray-300 rounded w-20"></div>
        <div class="h-8 bg-gray-300 rounded w-24"></div>
    </div>
</div>

<!-- Loading Spinner -->
<div class="loading-spinner flex items-center justify-center p-8">
    <div class="relative">
        <div class="w-12 h-12 border-4 border-gray-200 border-t-blue-500 rounded-full animate-spin"></div>
        <div class="absolute inset-0 flex items-center justify-center">
            <i class="fas fa-utensils text-blue-500 text-sm"></i>
        </div>
    </div>
</div>

<!-- Page Loading Overlay -->
<div id="pageLoadingOverlay" class="fixed inset-0 bg-white/90 dark:bg-gray-900/90 z-50 flex items-center justify-center backdrop-blur-sm" style="display: none;">
    <div class="text-center">
        <div class="loading-spinner mb-4">
            <div class="w-16 h-16 border-4 border-gray-200 border-t-blue-500 rounded-full animate-spin mx-auto"></div>
        </div>
        <p class="text-lg font-semibold text-primary">Menü yükleniyor...</p>
        <p class="text-sm text-secondary mt-2">Lütfen bekleyin</p>
    </div>
</div>

<!-- Progress Steps -->
<div class="progress-steps flex items-center justify-center space-x-4 mb-8">
    <div class="step active flex items-center">
        <div class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-semibold">1</div>
        <span class="ml-2 text-sm font-medium">Şehir Seç</span>
    </div>
    <div class="w-12 h-1 bg-gray-200 dark:bg-gray-700"></div>
    <div class="step flex items-center">
        <div class="w-8 h-8 bg-gray-200 dark:bg-gray-700 text-gray-500 rounded-full flex items-center justify-center text-sm font-semibold">2</div>
        <span class="ml-2 text-sm text-gray-500">Tarih Seç</span>
    </div>
    <div class="w-12 h-1 bg-gray-200 dark:bg-gray-700"></div>
    <div class="step flex items-center">
        <div class="w-8 h-8 bg-gray-200 dark:bg-gray-700 text-gray-500 rounded-full flex items-center justify-center text-sm font-semibold">3</div>
        <span class="ml-2 text-sm text-gray-500">Menü Gör</span>
    </div>
</div>
