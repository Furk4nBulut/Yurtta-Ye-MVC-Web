@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model YurttaYe.Core.Models.ViewModels.NoMenuCardViewModel

<style>
    /* Scoped styles for NoMenuCard */
    .no-menu-card.breakfast .icon-bg { background-color: #FFFBEB; }
    .no-menu-card.breakfast .icon-fg { color: #F59E0B; }
    .no-menu-card.breakfast .data-box { background-color: #FFFBEB; border-color: #FDE68A; }
    .no-menu-card.breakfast .data-icon-bg { background-color: #F59E0B; }
    .no-menu-card.breakfast .data-title { color: #B45309; }
    .no-menu-card.breakfast .main-button { background-color: #F59E0B; }
    .no-menu-card.breakfast .main-button:hover { background-color: #fbbf24; }

    .dark .no-menu-card.breakfast .icon-bg { background-color: #422006; }
    .dark .no-menu-card.breakfast .data-box { background-color: #422006; border-color: #78350F; }
    .dark .no-menu-card.breakfast .data-title { color: #FDE68A; }


    .no-menu-card.dinner .icon-bg { background-color: #EEF2FF; }
    .no-menu-card.dinner .icon-fg { color: #1E3A8A; }
    .no-menu-card.dinner .data-box { background-color: #EEF2FF; border-color: #C7D2FE; }
    .no-menu-card.dinner .data-icon-bg { background-color: #1E3A8A; }
    .no-menu-card.dinner .data-title { color: #312E81; }
    .no-menu-card.dinner .main-button { background-color: #1E3A8A; }
    .no-menu-card.dinner .main-button:hover { background-color: #3B82F6; }

    .dark .no-menu-card.dinner .icon-bg { background-color: #1E293B; }
    .dark .no-menu-card.dinner .icon-fg { color: #C7D2FE; } /* Lighter color for dark bg */
    .dark .no-menu-card.dinner .data-box { background-color: #1E293B; border-color: #3730A3; }
    .dark .no-menu-card.dinner .data-title { color: #C7D2FE; }
    .dark .no-menu-card.dinner .main-button { background-color: #3B82F6; }
    .dark .no-menu-card.dinner .main-button:hover { background-color: #60A5FA; }

</style>

<div class="no-menu-card @(Model.IsBreakfast ? "breakfast" : "dinner") rounded-xl border border-card bg-card shadow-sm flex flex-col transition-colors w-full h-full min-h-[420px] p-8 text-center justify-between">
    <div>
        <!-- İkon -->
        <div class="w-16 h-16 mx-auto flex items-center justify-center rounded-full icon-bg">
            <i class="@(Model.IsBreakfast ? "fas fa-mug-hot" : "fas fa-utensils") text-4xl icon-fg"></i>
        </div>
        <!-- Başlık ve Açıklama -->
        <h2 class="text-xl font-bold text-primary mt-6">@Model.MealLabel</h2>
        <p class="text-secondary mt-2">
            @Model.Description
        </p>
    </div>

    <div class="w-full">
        <!-- Veri Katkısı Alanı -->
        <div class="w-full text-left flex items-center gap-3 rounded-lg px-4 py-3 mb-5 border data-box">
            <div class="w-10 h-10 flex-shrink-0 flex items-center justify-center rounded-md text-white text-lg data-icon-bg">
                <i class="fas fa-hand-holding-heart"></i>
            </div>
            <div>
                <div class="font-semibold data-title">@Localizer["DataContribution"]</div>
                <p class="text-xs text-secondary">
                    @Localizer["ContributionNeeded"]
                </p>
            </div>
        </div>

        <!-- Bize Ulaşın Butonu -->
        <a href="mailto:destek@yurttaye.com" class="w-full">
            <button class="w-full text-white font-semibold py-2 rounded-lg flex items-center justify-center gap-2 transition main-button">
                <i class="fas fa-envelope"></i> @Localizer["ContactUs"]
            </button>
        </a>
    </div>
</div> 