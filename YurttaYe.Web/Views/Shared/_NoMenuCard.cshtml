@model YurttaYe.Core.Models.ViewModels.NoMenuCardViewModel
<div class="rounded-xl border border-card bg-card shadow-sm flex flex-col transition-colors w-full h-full min-h-[420px] p-8 text-center justify-between">
    <div>
        <!-- İkon -->
        <div class="w-16 h-16 mx-auto flex items-center justify-center rounded-full bg-accent/10 dark:bg-accent/20 my-6">
            <i class="fas fa-clock text-3xl text-accent"></i>
        </div>

        <!-- Başlık ve Açıklama -->
        <h2 class="text-xl font-bold text-primary">Menü Henüz Yayınlanmadı</h2>
        <p class="text-secondary mt-2">
            <strong>@Model.DateText</strong> için bu öğünün menüsü henüz sisteme girilmemiş.
        </p>
    </div>

    <div class="w-full">
        <!-- Veri Katkısı Alanı -->
        <div class="w-full text-left flex items-center gap-3 bg-secondary rounded-lg px-4 py-3 mb-5">
            <div class="w-10 h-10 flex-shrink-0 flex items-center justify-center rounded-md bg-accent text-white text-lg">
                <i class="fas fa-hand-holding-heart"></i>
            </div>
            <div>
                <div class="font-semibold text-accent">Veri Katkısı</div>
                <p class="text-xs text-secondary mb-1">
                    Elinizde bilgi varsa, bize ulaşarak menünün eklenmesine yardımcı olabilirsiniz.
                </p>
                <p class="text-xs text-secondary">
                    Elinizde menüye ait herhangi bir belge (Excel, fotoğraf, PDF vb.) varsa veya kendi şehrinizin verilerinin sisteme eklenmesini istiyorsanız, lütfen bize mail yoluyla ulaşın. Sizin için verileri sisteme ekleyebiliriz.
                </p>
            </div>
        </div>

        <!-- Butonlar -->
        <div class="flex flex-col sm:flex-row gap-3 w-full">
            <a href="mailto:destek@yurttaye.com" class="w-full sm:w-1/2">
                <button class="w-full bg-accent hover:bg-accent-hover text-white font-semibold py-2 rounded-lg flex items-center justify-center gap-2 transition">
                    <i class="fas fa-envelope"></i> Bize Ulaşın
                </button>
            </a>
            <form method="post" asp-action="Index" class="w-full sm:w-1/2">
                <button type="submit" class="w-full bg-button-primary hover:bg-button-primary-hover text-white font-semibold py-2 rounded-lg flex items-center justify-center gap-2 transition">
                    <i class="fas fa-rotate-right"></i> Yenile
                </button>
            </form>
        </div>
    </div>
</div> 