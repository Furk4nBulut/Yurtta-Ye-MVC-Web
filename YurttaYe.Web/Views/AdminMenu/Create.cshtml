@model YurttaYe.Core.Models.ViewModels.AdminMenuViewModel
@{
    ViewData["Title"] = "Menü Ekle";
}
<h2>Menü Ekle</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CityId">Şehir</label>
        <select asp-for="CityId" class="form-control" asp-items="@Model.Cities"></select>
        <span asp-validation-for="CityId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MealType">Öğün</label>
        <select asp-for="MealType" class="form-control">
            <option value="Breakfast">Sabah</option>
            <option value="Dinner">Akşam</option>
        </select>
        <span asp-validation-for="MealType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date">Tarih</label>
        <input type="date" asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Energy">Enerji (kkal)</label>
        <input asp-for="Energy" class="form-control" placeholder="örn. 850-1135 kkal" />
        <span asp-validation-for="Energy" class="text-danger"></span>
    </div>
    <div id="menu-items">
        <h4>Yemekler</h4>
        <div class="form-group menu-item">
            <label>Kategori</label>
            <input type="text" name="Items[0].Category" class="form-control" placeholder="örn. Çorba" />
            <label>Yemek Adı</label>
            <input type="text" name="Items[0].Name" class="form-control" placeholder="örn. Sebze Çorbası" />
            <label>Gramaj</label>
            <input type="text" name="Items[0].Gram" class="form-control" placeholder="örn. 250 g" />
        </div>
    </div>
    <button type="button" onclick="addItem()" class="btn btn-secondary mb-3">Yemek Ekle</button>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let itemCount = 1;
        function addItem() {
            const div = document.createElement('div');
            div.className = 'form-group menu-item';
            div.innerHTML = `
                <label>Kategori</label>
                <input type="text" name="Items[${itemCount}].Category" class="form-control" placeholder="örn. Çorba" />
                <label>Yemek Adı</label>
                <input type="text" name="Items[${itemCount}].Name" class="form-control" placeholder="örn. Sebze Çorbası" />
                <label>Gramaj</label>
                <input type="text" name="Items[${itemCount}].Gram" class="form-control" placeholder="örn. 250 g" />
            `;
            document.getElementById('menu-items').appendChild(div);
            itemCount++;
        }
    </script>
}