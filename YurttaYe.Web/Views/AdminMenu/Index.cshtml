@model IEnumerable<YurttaYe.Core.Models.ViewModels.AdminMenuViewModel>
@{
    ViewData["Title"] = "Menü Yönetimi";
}
<h2>Menü Yönetimi</h2>
<a asp-action="Create" class="btn btn-success mb-3">Yeni Menü</a>
<table class="table table-bordered" id="menuTable">
    <thead>
    <tr>
        <th>Şehir</th>
        <th>Öğün</th>
        <th>Tarih</th>
        <th>Enerji</th>
        <th>Yemekler</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var menu in Model)
    {
        <tr>
            <td>@menu.CityName</td>
            <td>@(menu.MealType == "Breakfast" ? "Sabah" : "Akşam")</td>
            <td>@menu.Date.ToString("dd.MM.yyyy")</td>
            <td>@menu.Energy</td>
            <td>
                @foreach (var item in menu.Items)
                {
                    <div>@item.Category: @item.Name (@item.Gram)</div>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@menu.Id" class="btn btn-primary btn-sm">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@menu.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istiyor musunuz?')">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#menuTable').DataTable({
                "pageLength": 10,
                "order": [[2, "desc"]]
            });
        });
    </script>
}