@model IEnumerable<YurttaYe.Core.Models.ViewModels.AdminCityViewModel>
@{
    ViewData["Title"] = "Şehir Yönetimi";
}
<h2>Şehir Yönetimi</h2>
<a asp-action="Create" class="btn btn-success mb-3">Yeni Şehir</a>
<table class="table table-bordered" id="cityTable">
    <thead>
    <tr>
        <th>Şehir Adı</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var city in Model)
    {
        <tr>
            <td>@city.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@city.Id" class="btn btn-primary btn-sm">Düzenle</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#cityTable').DataTable({
                "pageLength": 10
            });
        });
    </script>
}