<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <div class="flex md:flex-row flex-col">
        <!-- Sidebar -->
        <div class="bg-gray-800 text-white w-full md:w-64 min-h-screen md:min-h-screen">
            <div class="flex items-center justify-center h-20 border-b border-gray-700">
                <h1 class="text-2xl font-bold">Admin Panel</h1>
            </div>
            <nav class="mt-10">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-tachometer-alt w-6"></i>
                    <span class="ml-4">Dashboard</span>
                </a>
                <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Index" class="flex items-center px-6 py-3 mt-4 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-utensils w-6"></i>
                    <span class="ml-4">Menus</span>
                </a>
                <a asp-area="Admin" asp-controller="AdminCity" asp-action="Index" class="flex items-center px-6 py-3 mt-4 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-city w-6"></i>
                    <span class="ml-4">Cities</span>
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <header class="flex justify-between items-center p-6 bg-white border-b-2 border-gray-200">
                <div class="flex items-center">
                    <h2 class="text-2xl text-gray-800 font-semibold">@ViewData["Title"]</h2>
                </div>
            </header>
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200 p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 