<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YurttaYe Admin Panel</title>
    
    <!-- Styles -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'admin-primary': '#1e40af',
                        'admin-secondary': '#3b82f6',
                        'admin-dark': '#1e293b',
                        'admin-light': '#f8fafc'
                    },
                    fontFamily: {
                        'inter': ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>
    
    <!-- Custom Styles -->
    <style>
        .nav-link.active {
            background-color: #1e40af !important;
            color: white !important;
        }
        
        .fade-in {
            animation: fadeIn 0.3s ease-in-out;
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .slide-in-right {
            animation: slideInRight 0.3s ease-in-out;
        }
        
        @@keyframes slideInRight {
            from { transform: translateX(100%); }
            to { transform: translateX(0); }
        }
        
        /* Admin Panel Custom Styles */
        .admin-sidebar {
            transition: all 0.3s ease-in-out;
        }
        
        .admin-dropdown {
            transition: all 0.2s ease-in-out;
        }
        
        .admin-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        
        .admin-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        
        .nav-link {
            transition: all 0.2s ease-in-out;
        }
        
        .nav-link:hover {
            background-color: #1e40af;
            color: white;
        }
        
        /* Loading animation */
        .loading-spinner {
            animation: spin 1s linear infinite;
        }
        
        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body class="bg-admin-light font-inter antialiased">
    
    <!-- Sidebar -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Mobile menu overlay -->
    <div id="sidebar-overlay" class="fixed inset-0 z-30 bg-black bg-opacity-50 lg:hidden hidden"></div>

    <!-- Main Content Wrapper -->
    <div class="lg:ml-64 min-h-screen flex flex-col">
        
        <!-- Top Navigation -->
        @await Html.PartialAsync("_AdminNavbar")
        
        <!-- Breadcrumb Navigation -->
        @await Html.PartialAsync("_AdminBreadcrumb")

        <!-- Main Content Area -->
        <main class="flex-1 px-6 pb-6">
            <!-- Page Content Container -->
            <div class="fade-in">
                @RenderBody()
            </div>
        </main>
        
        <!-- Footer -->
        @await Html.PartialAsync("_AdminFooter")
    </div>

    <!-- Core Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Admin Panel Scripts -->
    @await Html.PartialAsync("_AdminScripts")
    
    <!-- Page Specific Scripts -->
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
