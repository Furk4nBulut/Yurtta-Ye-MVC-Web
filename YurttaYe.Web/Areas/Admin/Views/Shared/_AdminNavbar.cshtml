<!-- Admin Top Navigation Bar -->
<header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-30">
    <!-- Mobile overlay için background -->
    <div class="lg:ml-64 relative">
        <div class="flex items-center justify-between px-6 py-4">
            <!-- Left Section -->
            <div class="flex items-center space-x-4">
                <!-- Mobile Menu Button -->
                <button id="mobile-menu-button" class="lg:hidden p-2 rounded-lg bg-admin-primary text-white hover:bg-admin-secondary transition-colors">
                    <i class="fas fa-bars"></i>
                </button>
                
                <!-- Page Title -->
                <div class="flex items-center space-x-2">
                    <h1 class="text-2xl font-bold text-gray-900">@ViewData["Title"]</h1>
                    @if (ViewData["Subtitle"] != null)
                    {
                        <span class="text-sm text-gray-500 bg-gray-100 px-2 py-1 rounded-md">@ViewData["Subtitle"]</span>
                    }
                </div>
            </div>
            
            <!-- Right Section -->
            <div class="flex items-center space-x-4">
                <!-- Search Bar -->
                <div class="relative hidden md:block">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                    <input type="text" 
                           id="global-search"
                           placeholder="Menü, şehir ara..." 
                           class="w-80 pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-primary focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white">
                    <!-- Search Results Dropdown -->
                    <div id="search-results" class="absolute top-full left-0 right-0 mt-1 bg-white border border-gray-200 rounded-lg shadow-lg hidden max-h-96 overflow-y-auto z-50">
                        <!-- Search results will be populated here -->
                    </div>
                </div>
                
                <!-- Quick Actions -->
                <div class="hidden lg:flex items-center space-x-2">
                    <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Create" 
                       class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-admin-primary hover:bg-admin-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-admin-primary transition-colors">
                        <i class="fas fa-plus mr-1"></i>
                        Yeni Menü
                    </a>
                    <a asp-area="Admin" asp-controller="AdminCity" asp-action="Create" 
                       class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-admin-primary transition-colors">
                        <i class="fas fa-map-marker-alt mr-1"></i>
                        Yeni Şehir
                    </a>
                </div>
                
                <!-- Ana Site Linki -->
                <div class="flex items-center space-x-2">
                    <a asp-controller="Home" asp-action="Index" asp-area="" 
                       class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-admin-primary transition-colors" 
                       target="_blank"
                       title="Ana siteyi yeni sekmede aç">
                        <i class="fas fa-home mr-2"></i>
                        Ana Site
                        <i class="fas fa-external-link-alt ml-1 text-xs"></i>
                    </a>
                    
                    <!-- Çıkış Butonu -->
                    <a href="/Account/Logout" 
                       class="inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-600 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors"
                       title="Admin panelinden çıkış yap">
                        <i class="fas fa-sign-out-alt mr-2"></i>
                        Çıkış
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>
