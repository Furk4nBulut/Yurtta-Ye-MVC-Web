<!-- Enhanced Admin Top Navigation Bar -->
<header class="bg-white/95 backdrop-blur-md shadow-lg border-b border-gray-200/50 sticky top-0 z-40">
    <div class="lg:ml-64 relative">
        <div class="flex items-center justify-start py-4 pl-2 pr-6">
            <!-- Mobile Menu Button -->
            <button id="mobile-menu-button" 
                    class="lg:hidden p-3 rounded-xl bg-gradient-to-r from-blue-600 to-blue-700 text-white hover:from-blue-700 hover:to-blue-800 transition-all duration-300 shadow-lg transform hover:scale-105">
                <i class="fas fa-bars text-lg"></i>
            </button>
            
            <!-- Page Title & Breadcrumb - Leftmost Position -->
            <div class="flex flex-col mr-8">
                <div class="flex align-items-lg-start">
                    <h1 class="text-2xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent">
                        @ViewData["Title"]
                    </h1>
                    @if (ViewData["Subtitle"] != null)
                    {
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">
                            <i class="fas fa-tag mr-1"></i>
                            @ViewData["Subtitle"]
                        </span>
                    }
                </div>
                <!-- Real-time Info -->
                <div class="flex items-center space-x-4 mt-1">
                    <span class="text-xs text-gray-500 flex items-center">
                        <div class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></div>
                        Canlı
                    </span>
                    <span class="text-xs text-gray-500" id="current-time">
                        @DateTime.Now.ToString("dd MMMM yyyy, HH:mm")
                    </span>
                </div>
            </div>
            
            <!-- Center Section - Enhanced Search -->
            <div class="hidden md:flex flex-1 max-w-md mr-8">
                <div class="relative w-full">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                    <input type="text" 
                           id="global-search"
                           placeholder="Menü, şehir, tarih ara..." 
                           class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 bg-gray-50/50 focus:bg-white shadow-sm hover:shadow-md placeholder-gray-400">
                    
                    <!-- Enhanced Search Results -->
                    <div id="search-results" class="absolute top-full left-0 right-0 mt-2 bg-white border border-gray-200 rounded-xl shadow-2xl hidden max-h-96 overflow-y-auto z-50">
                        <div class="p-4">
                            <div class="text-sm text-gray-500 mb-3">Arama Sonuçları</div>
                            <div id="search-content" class="space-y-2">
                                <!-- Results will be populated here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Right Section - Enhanced Actions -->
            <div class="flex items-center space-x-3 ml-auto">
                <!-- Quick Actions Dropdown -->
                <div class="relative">
                    <button id="quick-actions-btn"
                            class="inline-flex items-center px-4 py-2 rounded-xl bg-gradient-to-r from-blue-600 to-blue-700 text-white hover:from-blue-700 hover:to-blue-800 transition-all duration-300 shadow-lg transform hover:scale-105">
                        <i class="fas fa-plus mr-2"></i>
                        <span class="hidden sm:inline">Yeni</span>
                        <i class="fas fa-chevron-down ml-2 text-xs"></i>
                    </button>
                    
                    <div id="quick-actions-dropdown" 
                         class="absolute right-0 mt-2 w-64 bg-white rounded-xl shadow-2xl border border-gray-200 overflow-hidden z-50 hidden opacity-0 transform scale-95 transition-all duration-200">
                        
                        <div class="py-2">
                            <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Create" 
                               class="flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-700 transition-colors group">
                                <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3 group-hover:bg-blue-200 transition-colors">
                                    <i class="fas fa-utensils text-blue-600 text-sm"></i>
                                </div>
                                <div>
                                    <div class="font-medium">Yeni Menü</div>
                                    <div class="text-xs text-gray-500">Menü ekle ve düzenle</div>
                                </div>
                            </a>
                            
                            <a asp-area="Admin" asp-controller="AdminCity" asp-action="Create" 
                               class="flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition-colors group">
                                <div class="w-8 h-8 bg-emerald-100 rounded-lg flex items-center justify-center mr-3 group-hover:bg-emerald-200 transition-colors">
                                    <i class="fas fa-map-marker-alt text-emerald-600 text-sm"></i>
                                </div>
                                <div>
                                    <div class="font-medium">Yeni Şehir</div>
                                    <div class="text-xs text-gray-500">Lokasyon ekle</div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- User Actions -->
                <div class="flex items-center space-x-3">
                    <!-- Ana Siteye Git Button -->
                    <a asp-controller="Home" asp-action="Index" asp-area="" 
                       class="inline-flex items-center px-4 py-2 rounded-xl bg-gradient-to-r from-green-600 to-green-700 text-white hover:from-green-700 hover:to-green-800 transition-all duration-300 shadow-lg transform hover:scale-105" 
                       target="_blank">
                        <i class="fas fa-home mr-2"></i>
                        <span class="hidden sm:inline">Ana Siteye Git</span>
                        <i class="fas fa-external-link-alt ml-2 text-xs"></i>
                    </a>
                    
                    <!-- Çıkış Button -->
                    <a href="/Account/Logout" 
                       class="inline-flex items-center px-4 py-2 rounded-xl bg-gradient-to-r from-red-600 to-red-700 text-white hover:from-red-700 hover:to-red-800 transition-all duration-300 shadow-lg transform hover:scale-105">
                        <i class="fas fa-sign-out-alt mr-2"></i>
                        <span class="hidden sm:inline">Çıkış</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    // Dropdown Menu Management
    document.addEventListener('DOMContentLoaded', function() {
        // Quick Actions Dropdown
        const quickActionsBtn = document.getElementById('quick-actions-btn');
        const quickActionsDropdown = document.getElementById('quick-actions-dropdown');
        
        // User Menu Dropdown
        const userMenuBtn = document.getElementById('user-menu-btn');
        const userMenuDropdown = document.getElementById('user-menu-dropdown');
        
        // Toggle dropdown function
        function toggleDropdown(dropdown, button) {
            const isHidden = dropdown.classList.contains('hidden');
            
            // Close all dropdowns first
            closeAllDropdowns();
            
            if (isHidden) {
                dropdown.classList.remove('hidden');
                setTimeout(() => {
                    dropdown.classList.remove('opacity-0', 'scale-95');
                    dropdown.classList.add('opacity-100', 'scale-100');
                }, 10);
            }
        }
        
        // Close all dropdowns
        function closeAllDropdowns() {
            [quickActionsDropdown, userMenuDropdown].forEach(dropdown => {
                if (dropdown && !dropdown.classList.contains('hidden')) {
                    dropdown.classList.remove('opacity-100', 'scale-100');
                    dropdown.classList.add('opacity-0', 'scale-95');
                    setTimeout(() => {
                        dropdown.classList.add('hidden');
                    }, 200);
                }
            });
        }
        
        // Event listeners
        quickActionsBtn?.addEventListener('click', (e) => {
            e.stopPropagation();
            toggleDropdown(quickActionsDropdown, quickActionsBtn);
        });
        
        userMenuBtn?.addEventListener('click', (e) => {
            e.stopPropagation();
            toggleDropdown(userMenuDropdown, userMenuBtn);
        });
        
        // Close dropdowns when clicking outside
        document.addEventListener('click', (e) => {
            if (!e.target.closest('#quick-actions-btn') && !e.target.closest('#quick-actions-dropdown') &&
                !e.target.closest('#user-menu-btn') && !e.target.closest('#user-menu-dropdown')) {
                closeAllDropdowns();
            }
        });
        
        // Close dropdowns with Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeAllDropdowns();
            }
        });
    });
    
    // Global function for keyboard shortcuts modal
    function showKeyboardShortcuts() {
        if (window.adminPanel && window.adminPanel.showKeyboardShortcuts) {
            window.adminPanel.showKeyboardShortcuts();
        } else {
            alert('Klavye Kısayolları:\nCtrl+K: Arama\nCtrl+Shift+N: Yeni Menü\nEsc: Menüyü Kapat');
        }
    }
</script>
