<!-- Admin Sidebar Component -->
<aside id="sidebar" class="fixed left-0 top-0 z-40 w-64 h-screen transition-transform -translate-x-full lg:translate-x-0 bg-admin-dark border-r border-gray-700">
    <!-- Logo Section -->
    <div class="flex items-center justify-center h-16 border-b border-gray-700 bg-admin-primary">
        <div class="flex items-center space-x-2">
            <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                <i class="fas fa-utensils text-admin-primary text-lg"></i>
            </div>
            <div>
                <h1 class="text-lg font-bold text-white">YurttaYe</h1>
                <p class="text-xs text-blue-200">Admin Panel</p>
            </div>
        </div>
    </div>

    <!-- Navigation Menu -->
    <nav class="p-4 space-y-1">
        <!-- Dashboard -->
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" 
           class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-admin-primary hover:text-white transition-all duration-200 group @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "bg-admin-primary text-white" : "")">
            <i class="fas fa-tachometer-alt w-5 text-center group-hover:scale-110 transition-transform"></i>
            <span class="ml-3 font-medium">Dashboard</span>
        </a>
        
        <!-- Menu Management -->
        <div class="menu-section">
            <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Index" 
               class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-admin-primary hover:text-white transition-all duration-200 group @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminMenu" ? "bg-admin-primary text-white" : "")">
                <i class="fas fa-utensils w-5 text-center group-hover:scale-110 transition-transform"></i>
                <span class="ml-3 font-medium">Menü Yönetimi</span>
                <span class="ml-auto bg-blue-500 text-white text-xs px-2 py-1 rounded-full opacity-75">@ViewBag.MenuCount</span>
            </a>
        </div>
        
        <!-- City Management -->
        <a asp-area="Admin" asp-controller="AdminCity" asp-action="Index" 
           class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-admin-primary hover:text-white transition-all duration-200 group @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCity" ? "bg-admin-primary text-white" : "")">
            <i class="fas fa-city w-5 text-center group-hover:scale-110 transition-transform"></i>
            <span class="ml-3 font-medium">Şehir Yönetimi</span>
            <span class="ml-auto text-xs text-gray-400">@ViewBag.CityCount</span>
        </a>

        <!-- Divider -->
        <div class="border-t border-gray-700 my-4"></div>
    </nav>
</aside>
