<!-- Admin Sidebar Component -->
<aside id="sidebar" class="fixed left-0 top-0 z-40 w-64 h-screen transition-transform -translate-x-full lg:translate-x-0 bg-admin-dark border-r border-gray-700">
    <!-- Logo Section -->
    <div class="flex items-center justify-center h-16 border-b border-gray-700 bg-admin-primary">
        <div class="flex items-center space-x-2">
            <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                <i class="fas fa-utensils text-admin-primary text-lg"></i>
            </div>
            <div>
                <h1 class="text-lg font-bold text-white">YurttaYe</h1>
                <p class="text-xs text-blue-200">Admin Panel</p>
            </div>
        </div>
    </div>

    <!-- Navigation Menu -->
    <nav class="p-4 space-y-1">
        <!-- Dashboard -->
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" 
           class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-admin-primary hover:text-white transition-all duration-200 group @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "bg-admin-primary text-white" : "")">
            <i class="fas fa-tachometer-alt w-5 text-center group-hover:scale-110 transition-transform"></i>
            <span class="ml-3 font-medium">Dashboard</span>
        </a>
        
        <!-- Menu Management -->
        <div class="menu-section">
            <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Index" 
               class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-admin-primary hover:text-white transition-all duration-200 group @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminMenu" ? "bg-admin-primary text-white" : "")">
                <i class="fas fa-utensils w-5 text-center group-hover:scale-110 transition-transform"></i>
                <span class="ml-3 font-medium">Menü Yönetimi</span>
                <span class="ml-auto bg-blue-500 text-white text-xs px-2 py-1 rounded-full opacity-75">@ViewBag.MenuCount</span>
            </a>
        </div>
        
        <!-- City Management -->
        <a asp-area="Admin" asp-controller="AdminCity" asp-action="Index" 
           class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-admin-primary hover:text-white transition-all duration-200 group @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCity" ? "bg-admin-primary text-white" : "")">
            <i class="fas fa-city w-5 text-center group-hover:scale-110 transition-transform"></i>
            <span class="ml-3 font-medium">Şehir Yönetimi</span>
            <span class="ml-auto text-xs text-gray-400">@ViewBag.CityCount</span>
        </a>

        <!-- Divider -->
        <div class="border-t border-gray-700 my-4"></div>

        <!-- System Management -->
        <div class="space-y-1">
            <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider px-4 mb-2">Sistem Yönetimi</p>
            
            <a href="#" class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-admin-primary hover:text-white transition-all duration-200 group">
                <i class="fas fa-users w-5 text-center group-hover:scale-110 transition-transform"></i>
                <span class="ml-3 font-medium">Kullanıcılar</span>
                <span class="ml-auto">
                    <i class="fas fa-chevron-right text-xs text-gray-400 group-hover:text-white"></i>
                </span>
            </a>
            
            <a href="#" class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-admin-primary hover:text-white transition-all duration-200 group">
                <i class="fas fa-chart-bar w-5 text-center group-hover:scale-110 transition-transform"></i>
                <span class="ml-3 font-medium">Raporlar</span>
                <span class="ml-auto">
                    <i class="fas fa-chevron-right text-xs text-gray-400 group-hover:text-white"></i>
                </span>
            </a>
            
            <a href="#" class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-admin-primary hover:text-white transition-all duration-200 group">
                <i class="fas fa-cog w-5 text-center group-hover:scale-110 transition-transform"></i>
                <span class="ml-3 font-medium">Sistem Ayarları</span>
                <span class="ml-auto">
                    <i class="fas fa-chevron-right text-xs text-gray-400 group-hover:text-white"></i>
                </span>
            </a>
        </div>

        <!-- Divider -->
        <div class="border-t border-gray-700 my-4"></div>

        <!-- Help & Support -->
        <div class="space-y-1">
            <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider px-4 mb-2">Destek</p>
            
            <a href="#" class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-green-600 hover:text-white transition-all duration-200 group">
                <i class="fas fa-question-circle w-5 text-center group-hover:scale-110 transition-transform"></i>
                <span class="ml-3 font-medium">Yardım</span>
            </a>
            
            <a href="#" class="nav-link flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-purple-600 hover:text-white transition-all duration-200 group">
                <i class="fas fa-life-ring w-5 text-center group-hover:scale-110 transition-transform"></i>
                <span class="ml-3 font-medium">Destek</span>
            </a>
        </div>
    </nav>

    <!-- User Profile Section -->
    <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-700 bg-gray-800">
        <div class="flex items-center space-x-3 p-3 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors cursor-pointer">
            <div class="relative">
                <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                    <i class="fas fa-user text-white text-sm"></i>
                </div>
                <span class="absolute -bottom-1 -right-1 w-3 h-3 bg-green-400 border-2 border-gray-700 rounded-full"></span>
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-white truncate">Admin User</p>
                <p class="text-xs text-gray-400">Çevrimiçi • 5dk önce</p>
            </div>
            <div class="relative group">
                <button class="text-gray-400 hover:text-white transition-colors p-1">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
                <!-- Dropdown menu (hidden by default) -->
                <div class="absolute bottom-full right-0 mb-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 hidden group-hover:block">
                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                        <i class="fas fa-user mr-2"></i>Profil
                    </a>
                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                        <i class="fas fa-cog mr-2"></i>Ayarlar
                    </a>
                    <hr class="my-1">
                    <a href="#" class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                        <i class="fas fa-sign-out-alt mr-2"></i>Çıkış Yap
                    </a>
                </div>
            </div>
        </div>
    </div>
</aside>
