<!-- Enhanced Admin Footer Component -->
<footer class="bg-gradient-to-r from-gray-50 to-gray-100 border-t border-gray-200 shadow-inner mt-auto">
    <div class="px-6 py-6">
        <!-- Main Footer Content -->
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 mb-6">
            <!-- Company Info -->
            <div class="lg:col-span-1">
                <div class="flex items-center space-x-3 mb-4">
                    <div class="w-10 h-10 bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl flex items-center justify-center">
                        <i class="fas fa-utensils text-white"></i>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-900">YurttaYe</h3>
                        <p class="text-sm text-gray-600">Admin Panel</p>
                    </div>
                </div>
                <p class="text-sm text-gray-600 leading-relaxed">
                    Yurt yemek menülerini yönetmek için gelişmiş admin paneli.
                </p>
            </div>
            
            <!-- Quick Links -->
            <div class="lg:col-span-1">
                <h4 class="font-semibold text-gray-900 mb-3 flex items-center">
                    <i class="fas fa-link mr-2 text-blue-600"></i>
                    Hızlı Erişim
                </h4>
                <ul class="space-y-2 text-sm">
                    <li>
                        <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Index" 
                           class="text-gray-600 hover:text-blue-600 transition-colors flex items-center group">
                            <i class="fas fa-utensils mr-2 text-xs group-hover:scale-110 transition-transform"></i>
                            Menü Yönetimi
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="AdminCity" asp-action="Index" 
                           class="text-gray-600 hover:text-blue-600 transition-colors flex items-center group">
                            <i class="fas fa-city mr-2 text-xs group-hover:scale-110 transition-transform"></i>
                            Şehir Yönetimi
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Index" asp-area="" 
                           class="text-gray-600 hover:text-blue-600 transition-colors flex items-center group" target="_blank">
                            <i class="fas fa-home mr-2 text-xs group-hover:scale-110 transition-transform"></i>
                            Ana Site
                            <i class="fas fa-external-link-alt ml-1 text-xs"></i>
                        </a>
                    </li>
                </ul>
            </div>
            
            <!-- System Status -->
            <div class="lg:col-span-1">
                <h4 class="font-semibold text-gray-900 mb-3 flex items-center">
                    <i class="fas fa-server mr-2 text-green-600"></i>
                    Sistem Durumu
                </h4>
                <div class="space-y-3">
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-gray-600">Sunucu</span>
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
                            <span class="text-green-600 font-medium">Çevrimiçi</span>
                        </div>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-gray-600">Veritabanı</span>
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
                            <span class="text-green-600 font-medium">Aktif</span>
                        </div>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-gray-600">Son Yedekleme</span>
                        <span class="text-gray-500" id="last-backup">@DateTime.Now.ToString("HH:mm")</span>
                    </div>
                </div>
            </div>
            
            <!-- Statistics -->
            <div class="lg:col-span-1">
                <h4 class="font-semibold text-gray-900 mb-3 flex items-center">
                    <i class="fas fa-chart-bar mr-2 text-purple-600"></i>
                    İstatistikler
                </h4>
                <div class="grid grid-cols-2 gap-3">
                    <div class="bg-white rounded-lg p-3 text-center border border-gray-200 hover:shadow-md transition-shadow">
                        <div class="text-lg font-bold text-blue-600" id="footer-menu-count">@(ViewBag.MenuCount ?? 0)</div>
                        <div class="text-xs text-gray-600">Menü</div>
                    </div>
                    <div class="bg-white rounded-lg p-3 text-center border border-gray-200 hover:shadow-md transition-shadow">
                        <div class="text-lg font-bold text-emerald-600" id="footer-city-count">@(ViewBag.CityCount ?? 0)</div>
                        <div class="text-xs text-gray-600">Şehir</div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Divider -->
        <div class="border-t border-gray-200 pt-6">
            <!-- Bottom Footer -->
            <div class="flex flex-col lg:flex-row justify-between items-center space-y-4 lg:space-y-0">
                <!-- Left Section - Copyright & Version -->
                <div class="flex flex-col lg:flex-row items-center space-y-2 lg:space-y-0 lg:space-x-6 text-sm text-gray-600">
                    <div class="flex items-center">
                        <i class="fas fa-copyright mr-2"></i>
                        @DateTime.Now.Year YurttaYe. Tüm hakları saklıdır.
                    </div>
                    <div class="hidden lg:block text-gray-400">•</div>
                    <div class="flex items-center">
                        <i class="fas fa-code-branch mr-2 text-blue-600"></i>
                        <span class="font-medium">v1.2.0</span>
                        <span class="ml-2 px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">Stable</span>
                    </div>
                    <div class="hidden lg:block text-gray-400">•</div>
                    <div class="flex items-center">
                        <i class="fas fa-clock mr-2 text-gray-400"></i>
                        Son Güncelleme: <span id="last-update">@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                </div>
                
                <!-- Right Section - Action Links -->
                <div class="flex items-center space-x-6">
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors flex items-center group">
                        <i class="fas fa-shield-alt mr-2 group-hover:scale-110 transition-transform"></i>
                        Gizlilik
                    </a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors flex items-center group">
                        <i class="fas fa-file-contract mr-2 group-hover:scale-110 transition-transform"></i>
                        Şartlar
                    </a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors flex items-center group">
                        <i class="fas fa-life-ring mr-2 group-hover:scale-110 transition-transform"></i>
                        Destek
                    </a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors flex items-center group">
                        <i class="fas fa-question-circle mr-2 group-hover:scale-110 transition-transform"></i>
                        Yardım
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Performance Bar -->
    <div class="bg-gradient-to-r from-green-500 to-emerald-500 h-1"></div>
</footer>
