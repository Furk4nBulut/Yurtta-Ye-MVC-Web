<!-- Admin Footer Component -->
<footer class="border-t border-gray-200 bg-white px-6 py-4 mt-auto">
    <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
        <!-- Left Section - Copyright & Version -->
        <div class="flex items-center space-x-4">
            <p class="flex items-center">
                <i class="fas fa-copyright mr-1"></i>
                @DateTime.Now.Year YurttaYe. Tüm hakları saklıdır.
            </p>
            <span class="hidden md:block text-gray-400">•</span>
            <p class="hidden md:block flex items-center">
                <i class="fas fa-code-branch mr-1"></i>
                Versiyon 1.0.0
            </p>
        </div>
        
        <!-- Right Section - Links -->
        <div class="flex items-center space-x-4 mt-2 md:mt-0">
            <a href="#" class="hover:text-admin-primary transition-colors flex items-center">
                <i class="fas fa-shield-alt mr-1"></i>
                Gizlilik
            </a>
            <span class="text-gray-400">•</span>
            <a href="#" class="hover:text-admin-primary transition-colors flex items-center">
                <i class="fas fa-file-contract mr-1"></i>
                Kullanım Şartları
            </a>
            <span class="text-gray-400">•</span>
            <a href="#" class="hover:text-admin-primary transition-colors flex items-center">
                <i class="fas fa-life-ring mr-1"></i>
                Destek
            </a>
            <span class="text-gray-400">•</span>
            <a href="#" class="hover:text-admin-primary transition-colors flex items-center">
                <i class="fas fa-question-circle mr-1"></i>
                Yardım
            </a>
        </div>
    </div>
    
    <!-- Additional Footer Info -->
    <div class="mt-3 pt-3 border-t border-gray-100 flex flex-col md:flex-row justify-between items-center text-xs text-gray-400">
        <div class="flex items-center space-x-4">
            <span class="flex items-center">
                <i class="fas fa-server mr-1"></i>
                Sunucu Durumu: <span class="text-green-500 ml-1">Çevrimiçi</span>
            </span>
            <span class="hidden md:block">•</span>
            <span class="hidden md:block flex items-center">
                <i class="fas fa-clock mr-1"></i>
                Son Güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
            </span>
        </div>
        
        <div class="flex items-center space-x-3 mt-2 md:mt-0">
            <span class="flex items-center">
                <i class="fas fa-users mr-1"></i>
                Aktif Kullanıcı: <span class="text-blue-500 ml-1">1</span>
            </span>
            <span>•</span>
            <span class="flex items-center">
                <i class="fas fa-database mr-1"></i>
                <span class="text-green-500">Veritabanı Bağlı</span>
            </span>
        </div>
    </div>
</footer>

