@model YurttaYe.Core.Models.ViewModels.AdminCityViewModel

<div class="space-y-4">
    <!-- City Header -->
    <div class="border-b border-gray-200 pb-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <div class="w-12 h-12 rounded-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-lg mr-4">
                    @Model.Name.Substring(0, Math.Min(2, Model.Name.Length)).ToUpper()
                </div>
                <div>
                    <h4 class="text-lg font-semibold text-gray-900">@Model.Name</h4>
                    <p class="text-sm text-gray-500">Şehir Detayları</p>
                </div>
            </div>
            <div class="text-right">
                <span class="inline-flex items-center px-3 py-1 text-sm font-semibold rounded-full 
                      @((Model.MenuCount ?? 0) > 0 ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800")">
                    <i class="fas @((Model.MenuCount ?? 0) > 0 ? "fa-check" : "fa-exclamation-triangle") mr-1"></i>
                    @((Model.MenuCount ?? 0) > 0 ? "Aktif" : "Menü Yok")
                </span>
            </div>
        </div>
    </div>

    <!-- City Stats -->
    <div class="grid grid-cols-2 gap-4">
        <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center">
                <i class="fas fa-utensils text-blue-500 mr-3 text-xl"></i>
                <div>
                    <p class="text-xs text-gray-500">Toplam Menü</p>
                    <p class="text-2xl font-bold text-gray-900">@(Model.MenuCount ?? 0)</p>
                </div>
            </div>
        </div>
        
        <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center">
                <i class="fas fa-calendar text-green-500 mr-3 text-xl"></i>
                <div>
                    <p class="text-xs text-gray-500">Eklenme Tarihi</p>
                    <p class="text-sm font-medium text-gray-900">@(Model.CreatedDate?.ToString("dd MMM yyyy") ?? "Bilinmiyor")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Menu Type Distribution -->
    <div class="grid grid-cols-2 gap-4">
        <div class="bg-yellow-50 rounded-lg p-4 border border-yellow-200">
            <div class="flex items-center">
                <i class="fas fa-coffee text-yellow-600 mr-3 text-lg"></i>
                <div>
                    <p class="text-xs text-yellow-700">Kahvaltı Menüleri</p>
                    <p class="text-xl font-bold text-yellow-800">@ViewBag.BreakfastCount</p>
                </div>
            </div>
        </div>
        
        <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
            <div class="flex items-center">
                <i class="fas fa-moon text-blue-600 mr-3 text-lg"></i>
                <div>
                    <p class="text-xs text-blue-700">Akşam Menüleri</p>
                    <p class="text-xl font-bold text-blue-800">@ViewBag.DinnerCount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Menus -->
    <div>
        <h5 class="text-sm font-semibold text-gray-900 mb-3 flex items-center">
            <i class="fas fa-clock text-orange-500 mr-2"></i>
            Son Menüler
        </h5>
        
        @if (ViewBag.RecentMenus != null && ((List<YurttaYe.Core.Models.Entities.Menu>)ViewBag.RecentMenus).Any())
        {
            <div class="space-y-2 max-h-48 overflow-y-auto">
                @foreach (var menu in (List<YurttaYe.Core.Models.Entities.Menu>)ViewBag.RecentMenus)
                {
                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                        <div class="flex items-center">
                            <div class="w-8 h-8 rounded-full @(menu.MealType == "Breakfast" ? "bg-yellow-100" : "bg-blue-100") flex items-center justify-center mr-3">
                                <i class="fas @(menu.MealType == "Breakfast" ? "fa-coffee text-yellow-600" : "fa-moon text-blue-600") text-xs"></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-900">
                                    @(menu.MealType == "Breakfast" ? "Kahvaltı" : "Akşam Yemeği")
                                </p>
                                <p class="text-xs text-gray-500">@menu.Date.ToString("dd.MM.yyyy")</p>
                            </div>
                        </div>
                        <div class="text-right">
                            <p class="text-xs text-gray-500">@menu.Items.Count öğe</p>
                            @if (!string.IsNullOrEmpty(menu.Energy))
                            {
                                <p class="text-xs text-orange-600">@menu.Energy</p>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-6 bg-gray-50 rounded-lg">
                <i class="fas fa-inbox text-3xl text-gray-300 mb-2"></i>
                <p class="text-sm text-gray-500">Bu şehir için henüz menü eklenmemiş</p>
                <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Create" 
                   class="inline-flex items-center mt-2 text-sm text-blue-600 hover:text-blue-800">
                    <i class="fas fa-plus mr-1"></i>
                    İlk menüyü ekle
                </a>
            </div>
        }
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center justify-end space-x-2 pt-4 border-t border-gray-200">
        <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Index" asp-route-cityFilter="@Model.Name"
           class="inline-flex items-center px-3 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors text-sm">
            <i class="fas fa-utensils mr-1"></i>
            Menüleri Görüntüle
        </a>
        <a asp-area="Admin" asp-controller="AdminCity" asp-action="Edit" asp-route-id="@Model.Id" 
           class="inline-flex items-center px-3 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors text-sm">
            <i class="fas fa-edit mr-1"></i>
            Düzenle
        </a>
        <button onclick="closeCityDetails()" 
                class="inline-flex items-center px-3 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors text-sm">
            <i class="fas fa-times mr-1"></i>
            Kapat
        </button>
    </div>
</div>
