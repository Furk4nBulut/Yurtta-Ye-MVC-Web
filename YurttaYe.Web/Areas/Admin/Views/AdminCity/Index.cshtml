@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<YurttaYe.Core.Models.ViewModels.AdminCityViewModel>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = Localizer["CityManagement"];
}

<div class="mb-6 flex justify-between items-center">
    <a asp-area="Admin" asp-controller="AdminCity" asp-action="Create" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600">@Localizer["NewCity"]</a>
    <form asp-area="Admin" asp-controller="AdminCity" asp-action="Index" method="get" class="w-1/3">
        <div class="relative">
            <input type="text" name="search" class="w-full p-2 border rounded-lg" placeholder="@Localizer["SearchCityPlaceholder"]" />
            <button type="submit" class="absolute right-0 top-0 mt-2 mr-2">
                <i class="fas fa-search text-gray-500"></i>
            </button>
        </div>
    </form>
</div>

<div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="w-full">
        <thead class="bg-gray-200">
        <tr>
            <th class="p-3 text-left">@Localizer["CityName"]</th>
            <th class="p-3 text-left">@Localizer["Actions"]</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var city in Model)
        {
            <tr class="border-b">
                <td class="p-3">@city.Name</td>
                <td class="p-3 flex gap-2">
                    <a asp-area="Admin" asp-controller="AdminCity" asp-action="Edit" asp-route-id="@city.Id" class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600">@Localizer["Edit"]</a>
                    <form asp-area="Admin" asp-controller="AdminCity" asp-action="Delete" asp-route-id="@city.Id" method="post" class="inline" onsubmit="return confirm('@Localizer["ConfirmDelete"]')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">@Localizer["Delete"]</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@if (TempData["Success"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mt-4 rounded">
        @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mt-4 rounded">
        @TempData["Error"]
    </div>
}
