@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<YurttaYe.Core.Models.ViewModels.AdminCityViewModel>
@{
ViewData["Title"] = Localizer["CityManagement"];
}
<h2>@Localizer["CityManagement"]</h2>
<a asp-area="Admin" asp-controller="AdminCity" asp-action="Create" class="btn btn-success mb-3">@Localizer["NewCity"]</a>
<form asp-area="Admin" asp-controller="AdminCity" asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="@Localizer["SearchCityPlaceholder"]" />
        <button type="submit" class="btn btn-primary">@Localizer["Search"]</button>
    </div>
</form>
<table class="table table-bordered" id="cityTable">
    <thead>
    <tr>
        <th>@Localizer["CityName"]</th>
        <th>@Localizer["Actions"]</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var city in Model)
    {
    <tr>
        <td>@city.Name</td>
        <td>
            <a asp-area="Admin" asp-controller="AdminCity" asp-action="Edit" asp-route-id="@city.Id" class="btn btn-primary btn-sm">@Localizer["Edit"]</a>
            <form asp-area="Admin" asp-controller="AdminCity" asp-action="Delete" asp-route-id="@city.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('@Localizer["ConfirmDelete"]')">@Localizer["Delete"]</button>
            </form>
        </td>
    </tr>
    }
    </tbody>
</table>

@if (TempData["Success"] != null)
{
<div class="alert alert-success mt-3">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
<div class="alert alert-danger mt-3">@TempData["Error"]</div>
}

<script>
    $(document).ready(function () {
        $('#cityTable').DataTable({
            "pageLength": 10
        });
    });
</script>
