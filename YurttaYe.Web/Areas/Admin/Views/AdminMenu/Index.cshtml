@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["Menus"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
    <div class="container mx-auto p-6">
        <h2 class="text-2xl font-bold mb-6">@Localizer["Menus"]</h2>

        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded">
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded">
                @TempData["Error"]
            </div>
        }

        <form method="get" asp-area="Admin" asp-controller="AdminMenu" asp-action="Index" class="mb-6 grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">@Localizer["City"]</label>
                <select name="cityFilter" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">@Localizer["All"]</option>
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.Value" selected="@(city.Value == ViewBag.CityFilter ? "selected" : null)">@city.Text</option>
                    }
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">@Localizer["MealType"]</label>
                <select name="mealTypeFilter" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">@Localizer["All"]</option>
                    @foreach (var mealType in ViewBag.MealTypes)
                    {
                        <option value="@mealType.Value" selected="@(mealType.Value == ViewBag.MealTypeFilter ? "selected" : null)">@mealType.Text</option>
                    }
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">@Localizer["Date"]</label>
                <input type="date" name="dateFilter" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value="@ViewBag.DateFilter" />
            </div>
            <div class="flex items-end">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 w-full pointer-events-auto">@Localizer["Filter"]</button>
            </div>
        </form>

        <div class="bg-white shadow rounded-lg overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="p-3 text-left">@Localizer["City"]</th>
                        <th class="p-3 text-left">@Localizer["MealType"]</th>
                        <th class="p-3 text-left">@Localizer["Date"]</th>
                        <th class="p-3 text-left">@Localizer["Energy"]</th>
                        <th class="p-3 text-left">@Localizer["Items"]</th>
                        <th class="p-3 text-left">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var menu in Model)
                    {
                        <tr class="border-b">
                            <td class="p-3">@menu.CityName</td>
                            <td class="p-3">@menu.MealType</td>
                            <td class="p-3">@menu.Date.ToString("dd.MM.yyyy")</td>
                            <td class="p-3">@menu.Energy</td>
                            <td class="p-3">
                                <ul class="list-disc pl-5">
                                    @foreach (var item in menu.Items)
                                    {
                                        <li>@item.Category: @item.Name (@item.Gram)</li>
                                    }
                                </ul>
                            </td>
                            <td class="p-3 flex gap-2">
                                <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Edit" asp-route-id="@menu.Id" class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600 pointer-events-auto">@Localizer["Edit"]</a>
                                <form asp-area="Admin" asp-controller="AdminMenu" asp-action="Delete" asp-route-id="@menu.Id" method="post" class="inline" onsubmit="return confirm('@Localizer["ConfirmDeleteMenu"]');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 pointer-events-auto">@Localizer["Delete"]</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-6 flex gap-4">
            <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Create" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 pointer-events-auto">@Localizer["AddNewMenu"]</a>
            <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Upload" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 pointer-events-auto">@Localizer["UploadExcel"]</a>
        </div>
    </div>
</body>
</html>