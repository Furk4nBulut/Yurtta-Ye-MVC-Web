@section Scripts {
    <script>
        let itemIndex = @(Model.Items?.Count ?? 1);

        function addMenuItem() {
            const container = document.getElementById('menu-items-container');
            const newItem = `
                <div class="menu-item-row bg-gray-50 rounded-lg p-4 mb-3 border border-gray-200 fade-in" data-index="${itemIndex}">
                    <div class="flex items-center justify-between mb-3">
                        <h4 class="font-medium text-gray-900">√ñƒüe #${itemIndex + 1}</h4>
                        <button type="button" onclick="removeMenuItem(this)" class="text-red-600 hover:text-red-800 p-1">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Kategori</label>
                            <select name="Items[${itemIndex}].Category" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                <option value="">Kategori Se√ßiniz</option>
                                <option value="Ana Yemek">üçΩÔ∏è Ana Yemek</option>
                                <option value="√áorba">üç≤ √áorba</option>
                                <option value="Salata">ü•ó Salata</option>
                                <option value="Pilav">üçö Pilav</option>
                                <option value="Tatlƒ±">üç∞ Tatlƒ±</option>
                                <option value="ƒ∞√ßecek">ü•§ ƒ∞√ßecek</option>
                                <option value="Ekmek">üçû Ekmek</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Yemek Adƒ±</label>
                            <input name="Items[${itemIndex}].Name" type="text" placeholder="√ñrn: Mercimek √áorbasƒ±" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Gram</label>
                            <input name="Items[${itemIndex}].Gram" type="text" placeholder="√ñrn: 250g" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                        </div>
                    </div>
                </div>
            `;
            
            container.insertAdjacentHTML('beforeend', newItem);
            itemIndex++;
            showAdminNotification('Yeni men√º √∂ƒüesi eklendi!', 'success');
        }

        function removeMenuItem(button) {
            const itemRow = button.closest('.menu-item-row');
            itemRow.style.opacity = '0';
            itemRow.style.transform = 'translateX(-100%)';
            
            setTimeout(() => {
                itemRow.remove();
                updateItemNumbers();
                showAdminNotification('Men√º √∂ƒüesi silindi!', 'info');
            }, 300);
        }

        function updateItemNumbers() {
            const items = document.querySelectorAll('.menu-item-row');
            items.forEach((item, index) => {
                const title = item.querySelector('h4');
                title.textContent = `√ñƒüe #${index + 1}`;
            });
        }

        function loadTemplate(type) {
            const container = document.getElementById('menu-items-container');
            
            // Clear existing items
            container.innerHTML = '';
            itemIndex = 0;

            let templates = [];
            
            if (type === 'breakfast') {
                document.querySelector('[name="MealType"]').value = 'Breakfast';
                templates = [
                    { category: 'Ekmek', name: 'Beyaz Ekmek', gram: '2 dilim' },
                    { category: 'ƒ∞√ßecek', name: '√áay', gram: '1 bardak' },
                    { category: 'Ana Yemek', name: 'Menemen', gram: '1 porsiyon' },
                    { category: 'Salata', name: 'Domates Salata', gram: '1 tabak' }
                ];
            } else if (type === 'dinner') {
                document.querySelector('[name="MealType"]').value = 'Dinner';
                templates = [
                    { category: '√áorba', name: 'Mercimek √áorbasƒ±', gram: '1 kase' },
                    { category: 'Ana Yemek', name: 'Tavuk ≈ûnitzel', gram: '1 porsiyon' },
                    { category: 'Pilav', name: 'Bulgur Pilavƒ±', gram: '1 porsiyon' },
                    { category: 'Salata', name: 'Mevsim Salatasƒ±', gram: '1 tabak' },
                    { category: 'ƒ∞√ßecek', name: 'Ayran', gram: '1 bardak' }
                ];
            }

            templates.forEach((template, index) => {
                const newItem = `
                    <div class="menu-item-row bg-gray-50 rounded-lg p-4 mb-3 border border-gray-200 fade-in" data-index="${index}">
                        <div class="flex items-center justify-between mb-3">
                            <h4 class="font-medium text-gray-900">√ñƒüe #${index + 1}</h4>
                            ${index > 0 ? '<button type="button" onclick="removeMenuItem(this)" class="text-red-600 hover:text-red-800 p-1"><i class="fas fa-trash"></i></button>' : ''}
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Kategori</label>
                                <select name="Items[${index}].Category" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                    <option value="">Kategori Se√ßiniz</option>
                                    <option value="Ana Yemek" ${template.category === 'Ana Yemek' ? 'selected' : ''}>üçΩÔ∏è Ana Yemek</option>
                                    <option value="√áorba" ${template.category === '√áorba' ? 'selected' : ''}>üç≤ √áorba</option>
                                    <option value="Salata" ${template.category === 'Salata' ? 'selected' : ''}>ü•ó Salata</option>
                                    <option value="Pilav" ${template.category === 'Pilav' ? 'selected' : ''}>üçö Pilav</option>
                                    <option value="Tatlƒ±" ${template.category === 'Tatlƒ±' ? 'selected' : ''}>üç∞ Tatlƒ±</option>
                                    <option value="ƒ∞√ßecek" ${template.category === 'ƒ∞√ßecek' ? 'selected' : ''}>ü•§ ƒ∞√ßecek</option>
                                    <option value="Ekmek" ${template.category === 'Ekmek' ? 'selected' : ''}>üçû Ekmek</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Yemek Adƒ±</label>
                                <input name="Items[${index}].Name" value="${template.name}" type="text" placeholder="√ñrn: Mercimek √áorbasƒ±" 
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Gram</label>
                                <input name="Items[${index}].Gram" value="${template.gram}" type="text" placeholder="√ñrn: 250g" 
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                            </div>
                        </div>
                    </div>
                `;
                container.insertAdjacentHTML('beforeend', newItem);
            });

            itemIndex = templates.length;
            showAdminNotification(`${type === 'breakfast' ? 'Kahvaltƒ±' : 'Ak≈üam yemeƒüi'} ≈üablonu y√ºklendi!`, 'success');
        }

        function previewMenu() {
            // Implementation for menu preview
            showAdminNotification('Men√º √∂nizlemesi a√ßƒ±lƒ±yor...', 'info');
        }

        // Set today's date as default
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.querySelector('input[type="date"]');
            if (!dateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                dateInput.value = today;
            }
        });

        // Form validation
        document.getElementById('create-menu-form').addEventListener('submit', function(e) {
            const items = document.querySelectorAll('.menu-item-row');
            let hasValidItem = false;

            items.forEach(item => {
                const category = item.querySelector('select[name*="Category"]').value;
                const name = item.querySelector('input[name*="Name"]').value;
                
                if (category && name) {
                    hasValidItem = true;
                }
            });

            if (!hasValidItem) {
                e.preventDefault();
                showAdminNotification('En az bir men√º √∂ƒüesi eklemeli ve kategori ile yemek adƒ±nƒ± belirtmelisiniz!', 'error');
            }
        });
    </script>
}
