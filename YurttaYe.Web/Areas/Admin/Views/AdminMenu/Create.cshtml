@model YurttaYe.Core.Models.ViewModels.AdminMenuViewModel
@{
    ViewData["Title"] = "Yeni Menü";
}
<h2>Yeni Menü</h2>
<form asp-area="Admin" asp-controller="AdminMenu" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CityId">Şehir</label>
        <select asp-for="CityId" asp-items="@Model.Cities" class="form-control"></select>
        <span asp-validation-for="CityId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MealType">Öğün</label>
        <select asp-for="MealType" class="form-control">
            <option value="Breakfast">Sabah</option>
            <option value="Dinner">Akşam</option>
        </select>
        <span asp-validation-for="MealType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date">Tarih</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Energy">Enerji</label>
        <input asp-for="Energy" class="form-control" />
        <span asp-validation-for="Energy" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Yemek Öğeleri</label>
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            <div class="row mb-2">
                <div class="col-md-4">
                    <input asp-for="Items[i].Category" class="form-control" placeholder="Kategori" />
                    <span asp-validation-for="Items[i].Category" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <input asp-for="Items[i].Name" class="form-control" placeholder="Yemek" />
                    <span asp-validation-for="Items[i].Name" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <input asp-for="Items[i].Gram" class="form-control" placeholder="Gramaj" />
                    <span asp-validation-for="Items[i].Gram" class="text-danger"></span>
                </div>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
    <partial name="_ValidationScriptsPartial" />
