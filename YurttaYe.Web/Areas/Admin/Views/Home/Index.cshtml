@model YurttaYe.Core.Models.ViewModels.DashboardViewModel
@using System.Text.Json;
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mx-auto p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md flex items-center">
            <div class="bg-blue-500 text-white rounded-full p-4 mr-4">
                <i class="fas fa-utensils fa-2x"></i>
            </div>
            <div>
                <h2 class="text-xl font-semibold">Total Menus</h2>
                <p class="text-3xl font-bold">@Model.TotalMenus</p>
                <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Index" class="text-blue-500 hover:underline mt-2 inline-block">Manage Menus</a>
            </div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md flex items-center">
            <div class="bg-green-500 text-white rounded-full p-4 mr-4">
                <i class="fas fa-city fa-2x"></i>
            </div>
            <div>
                <h2 class="text-xl font-semibold">Total Cities</h2>
                <p class="text-3xl font-bold">@Model.TotalCities</p>
                <a asp-area="Admin" asp-controller="AdminCity" asp-action="Index" class="text-green-500 hover:underline mt-2 inline-block">Manage Cities</a>
            </div>
        </div>
    </div>

    <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-4">Menus Added in Last 7 Days</h2>
            <canvas id="dailyMenuChart"></canvas>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-4">Recent Menus</h2>
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead class="bg-gray-200">
                    <tr>
                        <th class="p-3">City</th>
                        <th class="p-3">Meal Type</th>
                        <th class="p-3">Date</th>
                        <th class="p-3">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var menu in Model.RecentMenus)
                    {
                        <tr class="border-b">
                            <td class="p-3">@menu.CityName</td>
                            <td class="p-3">@menu.MealType</td>
                            <td class="p-3">@menu.Date.ToString("dd.MM.yyyy")</td>
                            <td class="p-3">
                                <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Edit" asp-route-id="@menu.Id" class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600">Edit</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        const ctx = document.getElementById('dailyMenuChart');
        const chartLabels = @Html.Raw(JsonSerializer.Serialize(Model.ChartLabels));
        const chartData = @Html.Raw(JsonSerializer.Serialize(Model.ChartData));

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: chartLabels,
                datasets: [{
                    label: '# of Menus',
                    data: chartData,
                    borderColor: 'rgba(54, 162, 235, 1)',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                responsive: true,
                maintainAspectRatio: false
            }
        });
    </script>
} 