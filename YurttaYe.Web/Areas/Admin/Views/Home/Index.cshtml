@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mx-auto p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md flex items-center">
            <div class="bg-blue-500 text-white rounded-full p-4 mr-4">
                <i class="fas fa-utensils fa-2x"></i>
            </div>
            <div>
                <h2 class="text-xl font-semibold">Total Menus</h2>
                <p class="text-3xl font-bold">@ViewBag.TotalMenus</p>
                <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Index" class="text-blue-500 hover:underline mt-2 inline-block">Manage Menus</a>
            </div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md flex items-center">
            <div class="bg-green-500 text-white rounded-full p-4 mr-4">
                <i class="fas fa-city fa-2x"></i>
            </div>
            <div>
                <h2 class="text-xl font-semibold">Total Cities</h2>
                <p class="text-3xl font-bold">@ViewBag.TotalCities</p>
                <a asp-area="Admin" asp-controller="AdminCity" asp-action="Index" class="text-green-500 hover:underline mt-2 inline-block">Manage Cities</a>
            </div>
        </div>
        <!-- Add more cards for other management sections as needed -->
    </div>
</div> 