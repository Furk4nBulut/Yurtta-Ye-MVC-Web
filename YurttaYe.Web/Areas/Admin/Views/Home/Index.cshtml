@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Welcome to the Admin Dashboard</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-4">Menus</h2>
            <p class="text-gray-700">Manage daily menus for different cities.</p>
            <a asp-area="Admin" asp-controller="AdminMenu" asp-action="Index" class="text-blue-500 hover:underline mt-4 inline-block">Go to Menus</a>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-4">Cities</h2>
            <p class="text-gray-700">Manage cities where the service is available.</p>
            <a asp-area="Admin" asp-controller="AdminCity" asp-action="Index" class="text-blue-500 hover:underline mt-4 inline-block">Go to Cities</a>
        </div>
        <!-- Add more cards for other management sections as needed -->
    </div>
</div> 